@page
@model IndexModel
@{
    ViewData["Title"] = "Cyber Arcade Hub";
    Layout = null;
}

<!DOCTYPE html>
<html lang="sv">
<head>
    <meta charset="utf-8" />
    <title>CYBER ARCADE HUB</title>
    <style>
        /* --- GRUNDDESIGN --- */
        body {
            background-color: #020202;
            color: #00ff41;
            font-family: 'Courier New', monospace;
            margin: 0; padding: 0; overflow-x: hidden; min-height: 100vh;
            display: flex; flex-direction: column; align-items: center;
        }

        /* --- BAKGRUND --- */
        .bg-grid {
            position: fixed; top: 0; left: 0; width: 100vw; height: 100vh;
            background: linear-gradient(rgba(0, 255, 65, 0.1) 1px, transparent 1px), linear-gradient(90deg, rgba(0, 255, 65, 0.1) 1px, transparent 1px);
            background-size: 50px 50px; z-index: -1; perspective: 500px; transform: scale(1.2);
            animation: moveGrid 20s linear infinite;
        }
        
        @@keyframes moveGrid {
            0% { transform: translateY(0) perspective(500px) rotateX(10deg); }
            100% { transform: translateY(50px) perspective(500px) rotateX(10deg); }
        }

        header { margin: 40px 0; text-align: center; z-index: 10; }
        h1 { font-size: 60px; margin: 0; text-shadow: 0 0 20px #00ff41, 0 0 40px #00ff41; letter-spacing: 5px; }
        p { font-size: 18px; color: #888; background-color: rgba(0,0,0,0.7); display: inline-block; padding: 5px 10px; border: 1px solid #333; }

        .game-grid { display: grid; grid-template-columns: repeat(3, 1fr); gap: 30px; max-width: 1200px; width: 90%; z-index: 10; padding-bottom: 50px; }

        /* --- SPELKORT --- */
        .game-card {
            position: relative; height: 250px; background-color: rgba(0, 20, 0, 0.8);
            border: 2px solid #005511; border-radius: 10px; overflow: hidden;
            transition: all 0.3s cubic-bezier(0.25, 0.8, 0.25, 1); text-decoration: none;
            display: flex; flex-direction: column; justify-content: center; align-items: center; cursor: pointer;
        }

        .card-icon { font-size: 80px; transition: 0.3s; z-index: 2; }
        .card-title { margin-top: 20px; color: #00ff41; font-size: 24px; font-weight: bold; text-transform: uppercase; text-shadow: 0 0 5px #00ff41; z-index: 2; transition: 0.3s; }

        /* --- TRAILER (Lokal fil) --- */
        .card-trailer {
            position: absolute; top: 0; left: 0; width: 100%; height: 100%;
            background-size: cover; background-position: center; 
            opacity: 0;
            transition: opacity 0.4s ease-in-out; 
            z-index: 1; 
            /* Lite mörkare filter så texten poppar */
            filter: grayscale(10%) contrast(110%) brightness(0.8);
        }
        
        .card-trailer::after { content: ""; position: absolute; top: 0; left: 0; width: 100%; height: 100%; background: rgba(0,0,0,0.4); }

        .game-card:hover { transform: scale(1.05) translateY(-10px); border-color: #00ff41; box-shadow: 0 0 30px rgba(0, 255, 65, 0.6); }
        .game-card:hover .card-trailer { opacity: 1; }
        .game-card:hover .card-icon { opacity: 0; transform: scale(0.5); }
        .game-card:hover .card-title { transform: translateY(80px); text-shadow: 0 0 15px #fff; color: #fff; }

        @@media (max-width: 900px) {
            .game-grid { grid-template-columns: repeat(2, 1fr); }
        }
    </style>
</head>
<body>
    <div class="bg-grid"></div>
    <header>
        <h1>CYBER ARCADE</h1>
        <p>SYSTEM ONLINE // SELECT MODULE</p>
    </header>

    <div class="game-grid">
        
        <a href="/GuessNumber" class="game-card">
            <div class="card-trailer" style="background-image: url('/images/guess.gif');"></div>
            <span class="card-icon">❓</span><span class="card-title">Gissa Numret</span>
        </a>

        <a href="/Snake" class="game-card">
            <div class="card-trailer" style="background-image: url('/images/snake.gif');"></div>
            <span class="card-icon">🐍</span><span class="card-title">Cyber Snake</span>
        </a>

        <a href="/TankBattle" class="game-card">
            <div class="card-trailer" style="background-image: url('/images/tank.gif');"></div>
            <span class="card-icon">🚜</span><span class="card-title">Tank Battle</span>
        </a>

        <a href="/Breakout" class="game-card">
            <div class="card-trailer" style="background-image: url('/images/breakout.gif');"></div>
            <span class="card-icon">🧱</span><span class="card-title">Firewall Breaker</span>
        </a>

        <a href="/Pong" class="game-card">
            <div class="card-trailer" style="background-image: url('/images/pong.gif');"></div>
            <span class="card-icon">🎾</span><span class="card-title">Neon Pong</span>
        </a>

        <a href="/SpaceInvaders" class="game-card">
            <div class="card-trailer" style="background-image: url('/images/space.gif');"></div>
            <span class="card-icon">👾</span><span class="card-title">Virus Defender</span>
        </a>
    </div>
</body>
</html>